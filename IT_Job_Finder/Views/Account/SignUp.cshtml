@{ ViewBag.Title = "SignUp"; Layout = null; }

<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../../Content/FormLoginAndSignUp/LoginAndSignUp.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer">
    <title>Sign up</title>
</head>

<body>
    <div class="container_SignUp">
        <form action="" class="form_SignUp">
            <div>
                <p class="title_SignUp">Đăng kí</p>
            </div>

            <div>
                <div class="icon_withIp_SignForm">
                    Họ và tên:
                </div>

                <input type="text" name="txtFullname_SignUp" placeholder="Họ và tên" id="ipFullname_SignUp" class="input_LgSignForm">
            </div>

            <div>
                <div class="icon_withIp_SignForm">
                    Email:
                </div>

                <input type="text" name="txtEmail_SignUp" placeholder="Email" id="ipEmail_SignUp" class="input_LgSignForm">
            </div>

            <div>
                <div class="icon_withIp_SignForm">
                    Tên đăng nhập:
                </div>

                <input type="text" name="txtUserName_SignUp" placeholder="Tên đăng nhập" id="ipUserName_SignUp" class="input_LgSignForm">
            </div>

            <div>
                <div class="icon_withIp_SignForm">
                    Mật khẩu:
                </div>

                <div class="contain_Password_Eye">
                    <input type="password" name="txtPassword_SignUp" placeholder="Mật khẩu" id="ipPassword_SignUp" class="input_LgSignForm">
                    <i class="fa-solid fa-eye" id="eye1_in_FormSignUp"></i>
                </div>
            </div>

            <div>
                <div class="icon_withIp_SignForm">
                    Nhắc lại mật khẩu:
                </div>

                <div class="contain_Password_Eye">
                    <input type="password" name="txtRePassword_SignUp" placeholder="Nhắc lại mật khẩu" id="ipRePassword_SignUp" class="input_LgSignForm">
                    <i class="fa-solid fa-eye" id="eye2_in_FormSignUp"></i>
                </div>
            </div>

            <div>
                <div class="icon_withIp_SignForm">
                    Vai trò:
                </div>

                <select name="txtRole_SignUp" id="role_SignUp" class="input_LgSignForm">
                    <option value="Candidate" class="option_role">Candidate</option>
                    <option value="Employer" class="option_role">Employer</option>
                </select>
            </div>


            <p class="error_message"></p>

            <div class="Rember_Forgot_Form">
                <div>
                    <input type="checkbox" name="" id="chk_CreateAgree">
                    <label for="" class="labelFoChk">Tôi đồng ý tạo tài khoản</label>
                </div>
            </div>

            <div class="button_Form">
                <input type="submit" value="Đăng kí" id="btnSignUpForm">
            </div>

            <div class="direct_SignUp_Form">
                <label for="">Bạn đã có tài khoản?</label> <a href="@Url.Action("Index", "Home")" class="link_In_Form">Quay lại trang chủ</a>
            </div>

        </form>
    </div>

    <div class="contain_message_success_signup">
        <div class="message_success_signup">
            <div class="success_signup_title">
                Thông báo
            </div>
            <div class="content_success_signup">
                <i class="fa-solid fa-circle-check icon_check"></i>
                <p class="content_success">Tài khoản đã được tạo thành công!</p>
            </div>
            <div class="contain_btn_success_signup">
                <form action="@Url.Action("Index", "Home")" method="post">
                    <button id="btn_success_signup" type="submit">Ok</button>
                </form>
            </div>
        </div>
    </div>

    <script src="../../Scripts/CustomScripts/FormLoginAndSignUp/SignUp.js"></script>
</body>

</html>