@model IT_Job_Finder.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../../Content/Profile/Profile.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
        integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
        crossorigin="anonymous" referrerpolicy="no-referrer">
    <title> @Html.Action("GetFullName", "Account", new { Username = Session["Username"] }) - Thông tin cá nhân</title>
</head>

<body>
    <nav class="_NoneSigninLayout-nav shadow">
        <div class="image-logo-container">
            <a href="@Url.Action("Index", "Home")" class="logo-name">IT Job Finder</a>
        </div>

        <div class="account-container">
            <input type="hidden" id="username_hide" value='@Session["Username"]' />
            <div class="login-signup">
                <a href="" class="signup-link" id="btn_logout_profile">Đăng xuất</a>
            </div>
        </div>
    </nav>


    <div class="contain_profile">
        <div class="main_profile">
            <div class="left_profile">
                <input type="hidden" id="candidate_id_hide" value="">
                <div class="contain_avatar">
                    <img src="" alt="Profile picture" class="avatar_Profile">
                    <p class="avatar_name" id="avatar_name_id"></p>
                </div>

                <div class="user_infor">
                    <div class="ip_profile_rowIp">
                        <label for="ip_txtFullName" class="lb_ip_profile">Họ và tên:</label>
                        <input type="text" name="txtFullname" id="ip_txtFullName" class="ip_Profile ip_hover disabled"
                            value="">
                    </div>

                    <div class="ip_profile_rowIp">
                        <label for="ip_txtEmail" class="lb_ip_profile">Email:</label>
                        <input type="text" name="txtEmail" id="ip_txtEmail" class="ip_Profile ip_hover disabled"
                            value="">
                    </div>

                    @* <div class="ip_profile_rowIp">
                        <label for="txt_candidateLevel" class="lb_ip_profile">Candidate level:</label>
                        <input type="text" name="txt_candidateLevel" id="txt_candidateLevel"
                            class="ip_Profile ip_hover disabled" value="">
                    </div> *@

                    <div class="ip_profile_rowIp">
                        <label for="txt_candidateLevel" class="lb_ip_profile">Candidate level:</label>
                        <select name="txt_candidateLevel" value='hih' id="txt_candidateLevel" class="ip_Profile ip_hover disabled">

                        </select>
                    </div>


                    <div class="ip_profile_rowIp">
                        <label for="" class="lb_ip_profile lb_gender">Giới tính:</label>
                        <div class="containRadios">
                            <label for="radioMale">Nam</label>
                            <input type="radio" name="Gender" class="radio_ip disabled" id="radioMale">
                            <label for="radioFemale" id="lb_radioFemale">Nữ</label>
                            <input type="radio" name="Gender" class="radio_ip disabled" id="radioFemale">
                        </div>
                    </div>

                    <div class="ip_profile_rowIp ip_profile_rowIp_hide">
                        <label for="ip_txtRole" class="lb_ip_profile">Url ảnh:</label>
                        <input type="file" name="txtImageUrl" id="ip_txtImageUrl" class="ip_Profile ip_hover disabled">
                    </div>

                    <div class="contain_button_profile">
                        <input type="submit" value="Chỉnh sửa thông tin" name="btn_edit" id="btn_edit">
                    </div>

                </div>
            </div>

            <div class="right_profile">
                <div class="tab_list">
                    <div class="tab">Thông tin bổ sung</div>
                </div>

                <div class="tab_content_container">
                    <div class="tab_content" id="additional_infor">
                        <div class="ip_profile_rowIp">
                            <label for="ip_txtAddress" class="lb_ip_profile">Địa chỉ:</label>
                            <input type="text" name="txtResume" id="ip_txtAddress"
                                class="ip_Profile ip_right_profile ip_hover disabled" value="">
                        </div>

                        <div class="ip_profile_rowIp">
                            <label for="ip_txtSkills" class="lb_ip_profile">Kĩ năng:</label>
                            <input type="text" name="txtSkills" id="ip_txtSkills"
                                class="ip_Profile ip_right_profile ip_hover disabled" value="">
                        </div>

                        <div class="ip_profile_rowIp">
                            <label for="ip_txtExpericence" class="lb_ip_profile">Kinh nghiệm:</label>
                            <textarea name="txtExpericence" id="ip_txtExpericence"
                                class="ip_right_profile  ip_Profile_textarea ip_hover disabled" cols="30"
                                rows="4"></textarea>
                        </div>

                        <div class="ip_profile_rowIp">
                            <label for="ip_txtEducation" class="lb_ip_profile">Giáo dục:</label>
                            <textarea name="txtEducation" id="ip_txtEducation"
                                class="ip_right_profile ip_Profile_textarea ip_hover disabled" cols="30"
                                rows="4"></textarea>
                        </div>
                    </div>
                </div>

                <div class="contain_btnCancelSave">
                    <input type="button" value="Lưu" name="btnSave" id="btn_save" class="btnCancelSave">
                    <input type="button" value="Hủy bỏ" name="btnCancel" id="btn_cancel" class="btnCancelSave">
                </div>

            </div>
        </div>

        <div class="conatain_job_applicated">
            <div class="tab">Công việc đã ứng tuyển</div>
            <div class="job_applicated_list">

            </div>


            <div>
                <input type="submit" name="btn_Edit_job_applicated" id="btn_Edit_job_applicated" class="btn_edit_list"
                    value="Edit job applicated">
                <input type="submit" name="Cabtn_cancel_edit_jppncel" id="btn_cancel_edit_jpp"
                    class="btn_cacel_japp_fav" value="Cancel">
            </div>
        </div>

        <div class="conatain_job_favourite">
            <div class="tab">Công việc yêu thích</div>
            <div class="job_favourite_list">

            </div>
            <div>
                <input type="submit" name="btn_Edit_favourite_job" id="btn_Edit_favourite_job" class="btn_edit_list"
                    value="Edit favourite job">
                <input type="submit" name="btn_cancel_edit_fav" id="btn_cancel_edit_fav" class="btn_cacel_japp_fav"
                    value="Cancel">
            </div>
        </div>
    </div>

    <div class="contain_logOut_message_box">
        <div class="message_box_logout">
            <div class="title_box">
                <p>Thông báo</p>
            </div>
            <div class="main_message">
                <p class="title_message_logout">Bạn có chắc chắn muốn đăng xuất không?</p>
                <div class="contain_logout_btn">
                    <button class="btnLogout" id="btnLogoutCancel">Hủy</button>
                    <form id="logoutForm" method="post" action="@Url.Action("LogOutHome", "Account")">
                        <button type="submit" class="btnLogout" id="btnLogoutOk">Ok</button>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <script src="../../Scripts/CustomScripts/Profile/Profile.js"></script>
</body>

</html>