<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="../../Content/CustomLayout/_HomeLayout.cshtml.css">
    <link href="~/Content/CustomLayout/Component/Card.css" rel="stylesheet" />
    <link href="~/Content/FormLoginAndSignUp/LoginMessage.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
          integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>
<body style="background: #f5f5f5">
    <nav class="_NoneSigninLayout-nav shadow">
        <div class="image-logo-container">
            <a href="/Home" class="logo-name">IT Job Finder</a>
        </div>

        <div class="account-container">
            <div class="user-info">
                <a href="@Url.Action("redirectToAccount", "Account", new { Username = Session["Username"]})"
                   class="users-name-info" id="userProfile">
                    <img src="" alt="" class="avatar_mini">
                    <span class="fullName_mini">
                        @Html.Action("GetFullName", "Account", new { Username = Session["Username"] })
                    </span>
                </a>
            </div>
            <div class="vertical-line"></div>
            <div class="login-signup">
                <a href="" class="signup-link">Log out</a>
            </div>
        </div>
    </nav>

    <main class="_NoneSigninLayout-main">
        <form method="get" action="" class="search-fliter-container shadow">
            <div class="search-container s-f-emlement-container">
                <i class="fa-solid fa-magnifying-glass"></i>
                <input type="text" name="txtTitle" id="txtSearch" placeholder="Tìm công việc của bạn">
            </div>
            <div class="all-city-container s-f-emlement-container">
                <i class="fa-solid fa-location-dot"></i>
                <input type="text" name="txtCity" id="txtCity" placeholder="Tất cả thành phố">
            </div>
            <div class="all-posision-container s-f-emlement-container">
                <i class="fa-solid fa-suitcase"></i>
                <input type="text" name="txtPosision" id="txtPosision" placeholder="Tất cả vị trí">
            </div>
            <div class="all-salary-container s-f-emlement-container">
                <i class="fa-solid fa-wallet"></i>
                <input type="number" style="border: none; outline: none;" name="txtSalary" id="txtSalary" placeholder="Tất cả lương">
            </div>
            <div class="button-find-job s-f-emlement-container">
                <input type="submit" id="btnSearch" value="Tìm kiếm" class="blue-button">
            </div>
        </form>

        <div class="grid-20-80-gap20">
            <aside class="filter-side-bar shadow">
                <div class="work-city-container filter-box">
                    <label>Nơi làm việc</label>
                    <div id="work_city_ul" class="checkbox-list">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="cityRadio" id="cityCheckbox1" value="option1">
                            <label class="form-check-label" for="cityCheckbox1">TP.Hồ Chí Minh</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="cityRadio" id="cityCheckbox2" value="option2">
                            <label class="form-check-label" for="cityCheckbox2">Hà Nội</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="cityRadio" id="cityCheckbox3" value="option3">
                            <label class="form-check-label" for="cityCheckbox3">Quy Nhơn</label>
                        </div>
                    </div>
                </div>
                <div class="requirement-container filter-box">
                    <label>Yêu cầu</label>
                    <div id="requirement_ul" class="checkbox-list">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="requirementRadio" id="requirementCheckbox1" value="option1">
                            <label class="form-check-label" for="requirementCheckbox1">C++</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="requirementRadio" id="requirementCheckbox2" value="option2">
                            <label class="form-check-label" for="requirementCheckbox2">Java</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="requirementRadio" id="requirementCheckbox3" value="option3">
                            <label class="form-check-label" for="requirementCheckbox3">JavaScript</label>
                        </div>
                    </div>
                </div>
                <div class="salary-container filter-box mb-3">
                    <label>Lương</label>
                    <div id="salary-ul" class="checkbox-list">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="salaryRadio" id="salaryCheckbox1" value="20000000">
                            <label class="form-check-label" for="salaryCheckbox1">>= 20 triệu</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="salaryRadio" id="salaryCheckbox2" value="15000000">
                            <label class="form-check-label" for="salaryCheckbox2">>= 15 triệu</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="salaryRadio" id="salaryCheckbox3" value="10000000">
                            <label class="form-check-label" for="salaryCheckbox3">>= 10 triệu</label>
                        </div>
                    </div>
                </div>
                <button id="filterSubmit" class="btn btn-primary">Tìm kiếm</button>
            </aside>

            <div class="container_list_card">
                <div id="renderBody" class="render-body job card-container">
                    @RenderBody()
                </div>

                <div class="pagination">
                    <button id="prev" disabled class="btn btn-primary hover_pointer"> <i class="fa-solid fa-chevron-left"></i> </button>

                    <div class="radio_list">

                    </div>

                    <button id="next" class="btn btn-primary hover_pointer"> <i class="fa-solid fa-chevron-right"></i> </button>
                </div>
            </div>

            <div style="content: ''; clear: both"></div>
        </div>

    </main>

    <div class="contain_message_box">
        <div class="message_box">
            <div class="title">
                <p>Chào mừng @Html.Action("GetFullName", "Account", new { Username = Session["Username"] })!</p>
            </div>

            <button id="btnOk_messBox">Ok</button>
        </div>
    </div>

    <div class="contain_logOut_message_box">
        <div class="message_box_logout">
            <div class="title_box">
                <p>Thông báo</p>
            </div>
            <div class="main_message">
                <p class="title_message_logout">Bạn có chắc chắn muốn đăng xuất không?</p>
                <div class="contain_logout_btn">
                    <button class="btnLogout" id="btnLogoutCancel">Hủy</button>
                    <form id="logoutForm" method="post" action="@Url.Action("LogOutHome", "Account")">
                        <button type="submit" class="btnLogout" id="btnLogoutOk">Ok</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/CustomScripts/FormLoginAndSignUp/MessageLogin.js"></script>

</body>
</html>